
@{
    ViewBag.Title = "Editar";
}

<div class="col-lg-12">
    <h2>EDITAR</h2>
</div>

<div class="row justify-content-center">
    <div class="col-lg-10 col-md-15 col-xs-13 thead menu-bg">
        <div class="login-form login-area">
                <div class="col-12 text-center">
                    <div class="heading">
                        <h6 class="section-title">Editar datos</h6>
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-icon">
                        <i class="lni-add-files"></i>
                        <input type="text" id="Nombre" class="form-control" placeholder="Nombre Votación" value="">
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-icon">
                        <i class="lni-code"></i>
                        <input type="number" id="Codigo" class="form-control" placeholder="Código de Grupo" value="">
                    </div>
                </div>
                <div style="display:inline-block;">
                    <label class="switch">
                        <input id="Abierta" type="checkbox" checked>
                        <span class="slider round" ></span>
                    </label>
                    <label style=" padding-top: 8px; padding-left: 5px;">Abierta</label>
                </div>
                <section class="section-padding">
                    <div class="container">
                        <div class="col-12 text-center">
                            <div class="heading">
                                <h6 class="section-title">Seleccionar candidatos</h6>
                            </div>
                        </div>
                        <div id="datosTablaE" class="row">

                        </div>
                        <div class="col-12 text-center">
                            <a href="../../Inicio/Gestion" class="btn btn-danger m-3 float-right">Cancelar</a>
                            <button onclick="EditarVotacion()" class="btn btn-success m-3 float-right">Guardar</button>
                        </div>
                    </div>
                </section>
        </div>
    </div>
</div>

<div class="toggler">
    <h4>  </h4>
</div>

@section scripts{
    <script>
        $(document).ready(function () {
            ListarEstudiantes();

            CargarDatosVotacion();
            CargarSeleccionCandidatos();
        });
    </script>
}